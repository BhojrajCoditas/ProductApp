<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Red Header Background -->
    <View
        android:id="@+id/redHeader"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/profile_header_background" />

    <!-- Settings Button on Top Right -->
    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/settings_24dp_ffffff_fill0_wght400_grad0_opsz24"
        android:background="@android:color/transparent"
         />

    <!-- White Rounded Container (Card) -->
    <ScrollView
        android:id="@+id/whiteCardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/redHeader"
        android:background="@drawable/white_rounded_top_background"
        android:layout_marginTop="-40dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="60dp"> <!-- Padding to allow space for image overlap -->

            <!-- Name -->
            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:text="Brad Pitt"
                android:textStyle="bold"
                android:drawableStart="@drawable/person"
                android:hint="Name"
                android:layout_marginTop="16dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:drawableStart="@drawable/mail"
                android:text="bradpitt12@gmail.com"
                android:hint="Email"
                android:layout_marginTop="8dp"/>

            <!-- Delivery Address -->
            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:drawableStart="@drawable/location"
                android:text="123 Main St Apartment 4A, New York, NY"
                android:hint="Delivery Address"
                android:layout_marginTop="8dp"/>

            <!-- Password -->
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:text="password123"
                android:inputType="textPassword"
                android:drawableStart="@drawable/lockup"
                android:hint="Password"
                android:layout_marginTop="8dp"/>

            <!-- Payment Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Details"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/smallright"/>
            </LinearLayout>

            <!-- Order History -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order History"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/smallright"/>
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary_background"
                    android:text="Edit Profile"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_outline_red"
                    android:text="Log Out"
                    android:textColor="@color/red"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Profile Image Floating at the Center Overlap -->
    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="110dp"
        android:layout_height="105dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profileimg" />

</RelativeLayout>
